{
  "settings": {
    "analysis": {
      "analyzer": {
        "text_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "asciifolding",
            "lowercase",
            "kstem"
          ]
        },
        "path_analyzer": {
          "type": "custom",
          "tokenizer": "path_hierarchy"
        }
      }
    }
  },
  "mappings": {
    "ghe_wiki": {
      "properties": {
        "path": {
          "type": "multi_field",
          "fields": {
            "path_full": {
              "type": "string",
              "index": "not_analyzed",
              "include_in_all": "false"
            },
            "path_analyzed": {
              "type": "string",
              "search_analyzer": "keyword",
              "index_analyzer": "path_analyzer",
              "include_in_all": "false"
            }
          }
        },
        "url": {
          "type": "string",
          "store": "yes",
          "include_in_all": "false"
        },
        "title": {
          "index": "analyzed",
          "type": "string",
          "analyzer": "text_analyzer",
          "store": "yes",
          "boost": 2
        },
        "content": {
          "term_vector": "with_positions_offsets",
          "index": "analyzed",
          "type": "string",
          "analyzer": "text_analyzer",
          "store": "yes"
        },
        "created_date": {
          "type": "date",
          "format": "date_time"
        },
        "author": {
          "type": "string"

        },
        "tags": {
          "type": "string",
          "index_name": "tag"
        }
      }
    },
    "jira_issue": {
      "properties": {
        "path": {
          "type": "multi_field",
          "fields": {
            "path_full": {
              "type": "string",
              "index": "not_analyzed",
              "include_in_all": "false"
            },
            "path_analyzed": {
              "type": "string",
              "search_analyzer": "keyword",
              "index_analyzer": "path_analyzer",
              "include_in_all": "false"
            }
          }
        },
        "url": {
          "type": "string",
          "store": "yes",
          "include_in_all": "false"
        },
        "title": {
          "index": "analyzed",
          "type": "string",
          "analyzer": "text_analyzer",
          "store": "yes",
          "boost": 2
        },
        "content": {
          "term_vector": "with_positions_offsets",
          "index": "analyzed",
          "type": "string",
          "analyzer": "text_analyzer",
          "store": "yes"
        },
        "created_date": {
          "type": "date",
          "format": "date_time"
        },
        "author": {
          "type": "string"

        },
        "tags": {
          "type": "string",
          "index_name": "tag"
        },
        "status": {
          "type": "string",
          "index": "not_analyzed"
        },
        "assignee": {
          "type": "string"
        }
      }
    }
  }
}